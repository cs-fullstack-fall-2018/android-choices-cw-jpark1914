<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <CheckBox
        android:id="@+id/oreo_box"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Oreo"
        app:layout_constraintEnd_toEndOf="@+id/reeses_box"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/reeses_box"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Reeses"
        app:layout_constraintEnd_toEndOf="@+id/butterfinger_box"
        app:layout_constraintTop_toBottomOf="@+id/oreo_box" />

    <CheckBox
        android:id="@+id/butterfinger_box"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Butterfinger"
        app:layout_constraintEnd_toEndOf="@+id/caramel_box"
        app:layout_constraintTop_toBottomOf="@+id/reeses_box" />

    <CheckBox
        android:id="@+id/caramel_box"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Caramel"
        app:layout_constraintTop_toBottomOf="@+id/butterfinger_box"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:onClick="showToast"
        android:text="Toppings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>